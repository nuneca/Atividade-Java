// ---------------------------
// INTERFACE AUTENTICรVEL
// ---------------------------
interface Autenticavel {
ยยย boolean login(String usuario, String senha);
ยยย void logout();
}
ย
// ---------------------------
// CLASSE SISTEMA DE SEGURANรA
// ---------------------------
class SistemaDeSeguranca implements Autenticavel {
ยยย private final String usuarioCorreto = "admin";
ยยย private final String senhaCorreta = "1234";
ยยย private boolean autenticado = false;
ย
ยยย @Override
ยยย public boolean login(String usuario, String senha) {
ยยยยยยย if (usuario.equals(usuarioCorreto) && senha.equals(senhaCorreta)) {
ยยยยยยยยยยย autenticado = true;
ยยยยยยยยยยย System.out.println("โ Login realizado com sucesso!");
ยยยยยยย } else {
ยยยยยยยยยยย System.out.println("โ Usuรกrio ou senha incorretos. Tente novamente.");
ยยยยยยย }
ยยยยยยย return autenticado;
ยยย }
ย
ยยย @Override
ยยย public void logout() {
ยยยยยยย autenticado = false;
ยยยยยยย System.out.println("๐ Logout realizado com sucesso!");
ยยย }
ย
ยยย public boolean isAutenticado() {
ยยยยยยย return autenticado;
ยยย }
}
