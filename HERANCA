interface OperacaoMatematica {
ยยย double soma(double a, double b);
ยยย double subtracao(double a, double b);
ยยย double multiplicacao(double a, double b);
ยยย double divisao(double a, double b);
}
ย
// ---------------------------
// CLASSE CALCULADORA
// ---------------------------
class Calculadora implements OperacaoMatematica {
ย
ยยย @Override
ยยย public double soma(double a, double b) {
ยยยยยยย return a + b;
ยยย }
ย
ยยย @Override
ยยย public double subtracao(double a, double b) {
ยยยยยยย return a - b;
ยยย }
ย
ยยย @Override
ยยย public double multiplicacao(double a, double b) {
ยยยยยยย return a * b;
ยยย }
ย
ยยย @Override
ยยย public double divisao(double a, double b) {
ยยยยยยย if (b == 0) {
ยยยยยยยยยยย System.out.println("Erro: divisรฃo por zero!");
ยยยยยยยยยยย return 0;
ยยยยยยย }
ยยยยยยย return a / b;
ยยย }
}
