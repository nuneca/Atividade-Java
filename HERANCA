// ---------------------------
// INTERFACE DE PAGAMENTO
// ---------------------------
interface Pagamento {
ยยย double calcularPagamento();
ยยย String emitirRecibo();
}
ย
// ---------------------------
// CLASSE PAGAMENTO CARTรO
// ---------------------------
class PagamentoCartao implements Pagamento {
ยยย private double valor;
ย
ยยย public PagamentoCartao(double valor) {
ยยยยยยย this.valor = valor;
ยยย }
ย
ยยย @Override
ยยย public double calcularPagamento() {
ยยยยยยย return valor * 1.05; // taxa de 5%
ยยย }
ย
ยยย @Override
ยยย public String emitirRecibo() {
ยยยยยยย return String.format("Pagamento com Cartรฃo\nValor original: R$ %.2f\nTaxa (5%%): R$ %.2f\nTotal: R$ %.2f",
ยยยยยยยยยยยยยยย valor, valor * 0.05, calcularPagamento());
ยยย }
}
ย
// ---------------------------
// CLASSE PAGAMENTO DINHEIRO
// ---------------------------
class PagamentoDinheiro implements Pagamento {
ยยย private double valor;
ย
ยยย public PagamentoDinheiro(double valor) {
ยยยยยยย this.valor = valor;
ยยย }
ย
ยยย @Override
ยยย public double calcularPagamento() {
ยยยยยยย return valor * 0.90; // desconto de 10%
ยยย }
ย
ยยย @Override
ยยย public String emitirRecibo() {
ยยยยยยย return String.format("Pagamento em Dinheiro\nValor original: R$ %.2f\nDesconto (10%%): R$ %.2f\nTotal: R$ %.2f",
ยยยยยยยยยยยยยยย valor, valor * 0.10, calcularPagamento());
ยยย }
}
